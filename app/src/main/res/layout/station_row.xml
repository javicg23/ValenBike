<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="92dp"
                android:layout_height="42dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape_number_station"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    app:srcCompat="@drawable/ic_bike_station_number" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/sheetNumberStation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="62dp"
                android:layout_height="76dp"
                android:contentDescription="@string/app_name"
                android:padding="16dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.988"
                app:layout_constraintStart_toEndOf="@+id/tvStationNum"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/cbNotify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_directions_bike_primary_24dp" />

                <TextView
                    android:id="@+id/tvNumFreeBikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:text="5"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/sheetAvailableBikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_local_parking_primary_24dp" />

                <TextView
                    android:id="@+id/tvNumFreeGaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="5"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/sheetAvailableStands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableLayout"
                android:layout_width="387dp"
                android:layout_height="148dp"
                android:layout_marginStart="8dp"
                android:fadingEdge="horizontal|vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivArrow">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="245dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_place_light_grey_24dp" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="378dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sheet_station_last_update" />

                    <TextView
                        android:id="@+id/tvLastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hora" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:paddingLeft="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                    <ImageButton
                        android:id="@+id/ibShowMap"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cardview_shadow_end_color"
                        android:fadingEdge="horizontal|vertical"
                        android:scaleType="fitCenter"
                        android:tint="@color/common_google_signin_btn_text_dark_focused"
                        app:srcCompat="@android:drawable/ic_dialog_map" />

                    <ImageButton
                        android:id="@+id/ibShowDistance"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cardview_shadow_end_color"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_directions_primary_24dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/sheetFavourite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_favorite_border_magenta_24dp"
                android:button="@null"
                android:checked="false"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/sheetReminder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_notifications_none_golden_24dp"
                android:button="@null"
                android:checked="false"
                app:layout_constraintEnd_toStartOf="@+id/sheetFavourite"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="90dp"
                android:layout_height="31dp"
                android:orientation="horizontal"
                android:paddingLeft="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:paddingTop="4dp"
                    android:text="800" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingTop="4dp"
                    android:text="m" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivBanking"
                android:layout_width="84dp"
                android:layout_height="32dp"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                app:layout_constraintTop_toBottomOf="@+id/sheetReminder"
                app:srcCompat="@drawable/ic_payment_primary_24dp" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toStartOf="@+id/sheetReminder"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>